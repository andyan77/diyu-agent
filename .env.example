# DIYU Agent Environment Configuration
# Copy to .env and fill in real values: cp .env.example .env
# NEVER commit .env with real secrets

# ============================================================
# Deployment Mode
# ============================================================
DEPLOY_MODE=saas
# saas: Multi-tenant SaaS (HttpOnly Cookie auth)
# private: Single-tenant private deployment (in-memory token)

# ============================================================
# Database
# ============================================================
DATABASE_URL=postgresql+asyncpg://diyu:diyu_dev@localhost:5432/diyu
DATABASE_POOL_SIZE=10
DATABASE_POOL_MAX_OVERFLOW=20

# ============================================================
# Redis
# ============================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================
# Auth / JWT
# ============================================================
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION
JWT_SECRET=CHANGE_ME_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================
# LLM Provider
# ============================================================
LLM_PROVIDER=openai
LLM_API_KEY=CHANGE_ME
LLM_MODEL=gpt-4o
LLM_BASE_URL=

# ============================================================
# Object Storage
# ============================================================
STORAGE_BASE_URL=http://localhost:9000
# STORAGE_BACKEND=s3
# S3_BUCKET=diyu-media
# S3_REGION=us-east-1
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# ============================================================
# Observability
# ============================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
# SENTRY_DSN=
# OTEL_EXPORTER_OTLP_ENDPOINT=

# ============================================================
# CORS
# ============================================================
CORS_ORIGINS=http://localhost:3000

# ============================================================
# Frontend (Next.js)
# ============================================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
