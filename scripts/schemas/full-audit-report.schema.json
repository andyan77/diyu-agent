{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Full Audit Report",
  "description": "Schema for /full-audit unified audit output (Section 12.6)",
  "type": "object",
  "required": ["timestamp", "phase", "results", "summary", "status"],
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of audit execution"
    },
    "phase": {
      "type": "integer",
      "minimum": 0,
      "description": "Current project phase (0-5)"
    },
    "results": {
      "type": "object",
      "description": "Results from each audit category",
      "properties": {
        "guards": {
          "type": "object",
          "description": "Guard script results (check_layer_deps, check_port_compat, check_rls)"
        },
        "skills": {
          "type": "object",
          "description": "Skill audit results (systematic-review, cross-audit, fix-verify)"
        },
        "agents": {
          "type": "object",
          "description": "Agent permission and behavior test results"
        },
        "hooks": {
          "type": "object",
          "description": "Hook registration and behavior test results"
        },
        "workflows": {
          "type": "object",
          "description": "Workflow completeness test results"
        },
        "governance": {
          "type": "object",
          "description": "Governance consistency check results"
        }
      }
    },
    "summary": {
      "type": "object",
      "required": ["total_checks", "passed", "failed", "skipped"],
      "properties": {
        "total_checks": {
          "type": "integer",
          "minimum": 0
        },
        "passed": {
          "type": "integer",
          "minimum": 0
        },
        "failed": {
          "type": "integer",
          "minimum": 0
        },
        "skipped": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["pass", "fail", "partial"],
      "description": "Overall audit status"
    }
  },
  "additionalProperties": false
}
